<%= form_for(@medical) do |f| %>
  <% if @medical.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medical.errors.count, "error") %> prohibited this medical from being saved:</h2>

      <ul>
      <% @medical.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :sheep_id, :value => @medical.sheep_id %>

  <div class="field">
    <%= f.label :datetime %><br>
    <%= f.datetime_select :datetime %>
  </div>
  <div class="field">
    <%= f.label :weight %><br>
    <%= f.number_field :weight %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes, placeholder: "Write new medical entry ..." %>
  </div>
  <div class="actions">
    <%= f.submit "Add entry", class: "btn btn-large btn-primary" %>
  </div>
<% end %>
